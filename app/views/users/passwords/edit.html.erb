
<div>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">
    <div class="animate form login_form">
      <section class="login_content">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <h1>Altere sua senha</h1>

          <div>
            <%= f.password_field :password, placeholder: "Password", class:"form-control" %>
          </div>

          <div>
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class:"form-control" %>
          </div>

          <div>
            <%= f.submit "Login", class:"btn btn-default submit", style:"float: none; margin-left: 0px" %>
            <%= link_to "Esqueceu a senha?", new_user_password_path, class:"reset_pass", style:"float: none; margin-left: 0px" %>
          </div>

          <div class="clearfix"></div>
          
          <div class="separator"></div>

        <% end %>
      </section>
    </div>
  </div>
</div>

